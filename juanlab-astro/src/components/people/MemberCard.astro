---
interface Props {
  name_zh: string;
  name_en: string;
  title?: string;
  department?: string;
  research?: string[];
  photo?: string;
  email?: string;
  variant?: "default" | "compact";
}

const { name_zh, name_en, title, department, research, photo, email, variant = "default" } = Astro.props;

// Helper to get initials
const initials = name_en.split(' ').map((n) => n[0]).join('').toUpperCase();
---

<div class={`member-card ${variant}`}>
  {variant !== 'compact' && (
    <div class="member-photo">
      {photo ? (
        <img src={photo} alt={name_en} loading="lazy" />
      ) : (
        <div class="photo-placeholder">
          <span>{initials}</span>
        </div>
      )}
    </div>
  )}
  <div class="member-info">
    <h3 class="member-name">
      <span class="name-zh">{name_zh}</span>
      <span class="name-en">{name_en}</span>
    </h3>
    {title && <p class="member-title">{title}</p>}
    {department && <p class="member-dept">{department}</p>}
    {research && research.length > 0 && variant !== 'compact' && (
      <div class="member-research">
        <h4>Research Interests:</h4>
        <ul>
          {research.map((topic) => <li>{topic}</li>)}
        </ul>
      </div>
    )}
    {/* For compact mode, show simple research or just dept */}
    {research && research.length > 0 && variant === 'compact' && (
      <p class="compact-research">{research.join(', ')}</p>
    )}
    
    {email && (
      <a href={`mailto:${email}`} class="member-email">{email}</a>
    )}
  </div>
</div>

<style>
  .member-card {
    background: var(--glass-bg, rgba(255, 255, 255, 0.8));
    border: 1px solid var(--glass-border, rgba(255, 255, 255, 0.5));
    border-radius: var(--radius-lg);
    padding: 1.5rem;
    transition: all 0.3s ease;
    backdrop-filter: blur(10px);
    display: flex;
    flex-direction: column;
    align-items: center;
    text-align: center;
    box-shadow: var(--shadow-sm);
    height: 100%;
  }

  .member-card.compact {
    padding: 1rem;
    align-items: flex-start;
    text-align: left;
    min-height: auto;
  }
  
  .member-card:hover {
    transform: translateY(-4px);
    box-shadow: var(--shadow-lg);
    border-color: var(--color-primary);
  }
  
  .member-photo {
    width: 120px;
    height: 120px;
    margin-bottom: 1rem;
    border-radius: 50%;
    overflow: hidden;
    border: 3px solid var(--color-primary);
  }
  
  .member-photo img {
    width: 100%;
    height: 100%;
    object-fit: cover;
  }
  
  .photo-placeholder {
    width: 100%;
    height: 100%;
    background: var(--gradient-primary);
    display: flex;
    align-items: center;
    justify-content: center;
    font-size: 2.5rem;
    color: white;
    font-weight: 700;
  }
  
  .member-name {
    margin-bottom: 0.5rem;
  }

  .compact .member-name {
    display: flex;
    align-items: baseline;
    gap: 0.5rem;
    margin-bottom: 0.25rem;
    flex-wrap: wrap;
  }
  
  .name-zh {
    display: block;
    font-size: 1.25rem;
    color: var(--color-text);
  }

  .compact .name-zh {
    font-size: 1.1rem;
    font-weight: 600;
  }
  
  .name-en {
    display: block;
    font-size: 1rem;
    color: var(--color-text-muted);
    font-weight: 400;
  }
  
  .member-title {
    color: var(--color-primary);
    font-weight: 600;
    margin-bottom: 0.25rem;
  }
  
  .member-dept {
    font-size: 0.9rem;
    color: var(--color-text-muted);
    margin-bottom: 1rem;
  }

  .compact .member-dept {
    margin-bottom: 0.5rem;
    font-size: 0.85rem;
  }
  
  .member-research {
    font-size: 0.85rem;
    text-align: left;
    width: 100%;
    margin-top: auto; /* Push to bottom */
  }

  .compact-research {
    font-size: 0.8rem;
    color: var(--color-text-muted);
    line-height: 1.4;
    margin-bottom: 0.5rem;
  }
  
  .member-research h4 {
    font-size: 0.9rem;
    margin-bottom: 0.25rem;
    color: var(--color-secondary);
  }
  
  .member-research ul {
    padding-left: 1.2rem;
    margin: 0;
  }
  
  .member-email {
    display: inline-block;
    margin-top: 1rem;
    font-size: 0.9rem;
    color: var(--color-primary);
    text-decoration: none;
  }

  .compact .member-email {
    margin-top: 0.5rem;
    font-size: 0.8rem;
  }
  
  .member-email:hover {
    text-decoration: underline;
  }
</style>
