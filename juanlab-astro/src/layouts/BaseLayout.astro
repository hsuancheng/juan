---
import "../styles/global.css";
// import Header from "../components/layout/Header.astro";
// import Footer from "../components/layout/Footer.astro";

interface Props {
  title: string;
  description?: string;
  lang?: "en" | "zh";
}

const { 
  title, 
  description = "Juan's Systems Biology Laboratory - NTU",
  lang = "zh"
} = Astro.props;
---

<!DOCTYPE html>
<html lang={lang}>
<head>
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0" />
  <meta name="description" content={description} />
  <title>{title} | Juan Lab</title>
  
  <link rel="preconnect" href="https://fonts.googleapis.com" />
  <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
  <link href="https://fonts.googleapis.com/css2?family=Inter:wght@400;500;600&family=Outfit:wght@500;600;700&family=Noto+Sans+TC:wght@400;500;700&display=swap" rel="stylesheet" />
  
  <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
</head>
<body>
  <div class="page-wrapper">
    {/* <Header /> */}
    <header class="site-header glass">
      <div class="container flex" style="justify-content: space-between; align-items: center; padding: 1rem;">
        <a href={import.meta.env.BASE_URL} class="logo">
          Juan Lab
        </a>
        <nav>
           <ul class="flex">
             <li><a href={import.meta.env.BASE_URL}>Home</a></li>
             <li><a href={`${import.meta.env.BASE_URL}/pi`}>PI</a></li>
             <li><a href={`${import.meta.env.BASE_URL}/research`}>Research</a></li>
             <li><a href={`${import.meta.env.BASE_URL}/publications`}>Publications</a></li>
             <li><a href={`${import.meta.env.BASE_URL}/members`}>Members</a></li>
             <li><a href={`${import.meta.env.BASE_URL}/join`}>Join Us</a></li>
           </ul>
        </nav>
      </div>
    </header>
    <main>
      <slot />
    </main>
    <footer class="site-footer">
      <div class="container">
        <p>&copy; {new Date().getFullYear()} Juan Systems Biology Lab. All rights reserved.</p>
        <p>National Taiwan University</p>
      </div>
    </footer>
  </div>
</body>
</html>

<style>
  .page-wrapper {
    display: flex;
    flex-direction: column;
    min-height: 100vh;
  }
  
  main {
    flex: 1;
    padding-top: 80px; /* Header height */
  }

  .site-header {
    position: fixed;
    top: 0;
    left: 0;
    right: 0;
    z-index: var(--z-header);
    height: 80px;
    display: flex;
    align-items: center;
  }

  .logo {
    font-family: var(--font-heading);
    font-weight: 700;
    font-size: 1.5rem;
    color: var(--color-primary);
  }

  nav ul {
    list-style: none;
    align-items: center;
  }

  nav a {
    font-weight: 500;
    color: var(--color-text);
  }

  nav a:hover {
    color: var(--color-primary);
  }

  .site-footer {
    background: var(--color-secondary);
    color: white;
    padding: var(--spacing-xl) 0;
    text-align: center;
    margin-top: auto;
  }
</style>
